{
  "name": "gatex",
  "displayName": "GateX",
  "description": "Your gateway to AI models - Access VS Code LLM providers via HTTP API",
  "version": "1.0.0",
  "publisher": "BaoliWang",
  "icon": "images/gatex.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Polly2014/GateX"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Machine Learning",
    "Other"
  ],
  "keywords": [
    "llm",
    "ai",
    "copilot",
    "openai",
    "api",
    "gateway"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gatex.configureForIDE",
        "title": "GateX: Configure for IDE"
      },
      {
        "command": "gatex.showInfo",
        "title": "GateX: Show Connection Info"
      },
      {
        "command": "gatex.copyEndpoint",
        "title": "GateX: Copy Endpoint URL"
      },
      {
        "command": "gatex.healthCheck",
        "title": "GateX: Check Model Health"
      },
      {
        "command": "gatex.restart",
        "title": "GateX: Restart Server"
      }
    ],
    "configuration": {
      "title": "GateX",
      "properties": {
        "gatex.port": {
          "type": "number",
          "default": 24680,
          "description": "Server port (0 = auto select, default: 24680)"
        },
        "gatex.timeout": {
          "type": "number",
          "default": 300,
          "description": "Request timeout in seconds (default: 300)"
        },
        "gatex.maxRetries": {
          "type": "number",
          "default": 3,
          "description": "Max retry attempts for failed requests"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.0",
    "@vscode/vsce": "^2.22.0"
  }
}
